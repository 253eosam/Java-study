<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bookMapper">
	<insert id="addBook" parameterType="bookVO"> 
		INSERT INTO 
		book(
			isbn
			,title
			,categori
			,nation
			,publish_day
			,publisher
			,author
			,price
			,description
		)
		VALUES(
			#{isbn}
			,#{title}
			,#{categori}
			,#{nation}
			,#{publishDay}
			,#{publisher}
			,#{author}
			,#{price}
			,#{description}
		)
	</insert>
	
	<sql id="selectAllAttr">
		SELECT isbn
			,title
			,categori
			,nation
			,publish_day
			,publisher
			,author
			,price
			,description
		FROM book
	</sql>
	
	<select id="findAllBook" resultType="bookVO">
		<include refid="selectAllAttr"/>
	</select>
	
	<select id="findBookByTitle" parameterType="string" resultType="bookVO">
		<include refid="selectAllAttr"/>
		<choose>
			<when test="#{value} != null">
				WHERE title LIKE '%${value}%'				
			</when>
		</choose>
	</select>
	
	<delete id="deleteBook" parameterType="string">
		DELETE FROM book
		WHERE isbn = #{value}
	</delete>
	
	<update id="updateBook" parameterType="bookVO">
		UPDATE book
		SET
			title = #{title}
			,categori = #{categori}
			,nation = #{nation}
			,publish_day = #{publishDay}
			,publisher = #{publisher}
			,author = #{author}
			,price = #{price}
			,description = #{description}
		WHERE isbn = #{isbn}
	</update>

</mapper>